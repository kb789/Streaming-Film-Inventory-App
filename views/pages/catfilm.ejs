<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="container">
    <header><%- include('../partials/header'); %></header>

    <main>
      
        <div class="table-responsive">
                <table class="table table-striped"">
                       
                                <% cat_films.forEach(function(film) { %>
                                        <tr>
                                  <td>
                                    <a class ="font-weight-bold" style="color: #9e48a9; text-decoration: underline;" href=  "<%= film.url %>" > <%= film.name %></a>      
                                  </td>
                                  <td> <%= film.director %>  </td>
                                  <td> <%= film.availability %>  </td>
                                </tr>
                                <% }); %>
                              
                </table>
              
       
      </div>
    </main>

    <footer><%- include('../partials/footer'); %></footer>
  </body>
</html>