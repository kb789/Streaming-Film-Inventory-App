<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="container">
    <header><%- include('../partials/header'); %></header>

    <main>
      <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-6">
          <br />
          <h2><%= film.name %></h2>
          <br />
          <p><%= film.director %></p>
          <p><%= film.price %></p>
          <p><%= film.availability %></p>
          <p><%= category %></p>
          <br />
          <div class="row">
            <div class="col-lg-4">
              <form action="/film/<%= film._id %>/edit">
                <input
                  type="submit"
                  class="button btn-block"
                  value="Edit"
                  style="background: #edc831; color: #c62835"
                />
              </form>
            </div>
            <div class="col-lg-4">
              <form action="/film/<%= film._id %>/delete" method="post">
                <button
                  name="delete"
                  value="delete"
                  class="button btn-block"
                  style="background: #edc831; color: #c62835"
                >
                  Delete
                </button>
              </form>
            </div>
          </div>
          <hr />
          <div class="text-center text-sm-left">
            <img
              class="w-100 h-100 pb-1 pb-sm-5 pb-md-1"
              src="<%= image %>"
              style="max-width: 300px; max-height: 400px"
              alt="Card image"
            />
          </div>
        </div>
        <div class="col-lg-4"></div>
      </div>
    </main>

    <footer><%- include('../partials/footer'); %></footer>
  </body>
</html>
